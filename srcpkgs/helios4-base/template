archs="armv7l"

do_install() {
        vinstall ${FILESDIR}/50-helios4-fan.rules 644 /usr/lib/udev/rules.d.
        vinstall ${FILESDIR}/fancontrol 644 etc/
        vsv agetty-ttyS0
}
